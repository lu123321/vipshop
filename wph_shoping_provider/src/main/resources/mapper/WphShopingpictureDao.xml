<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.wph_shoping_provider.dao.WphShopingpictureDao">

    <resultMap type="com.example.wph_shoping_provider.entity.WphShopingpicture" id="WphShopingpictureMap">
        <result property="pictureId" column="picture_id" jdbcType="INTEGER"/>
        <result property="pictureAddress" column="picture_address" jdbcType="VARCHAR"/>
        <result property="picture_1" column="picture_1" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="WphShopingpictureMap">
        select
          picture_id, picture_address, picture_1
        from wph.wph_shopingpicture
        where picture_id = #{pictureId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="WphShopingpictureMap">
        select
          picture_id, picture_address, picture_1
        from wph.wph_shopingpicture
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="WphShopingpictureMap">
        select
          picture_id, picture_address, picture_1
        from wph.wph_shopingpicture
        <where>
            <if test="pictureId != null">
                and picture_id = #{pictureId}
            </if>
            <if test="pictureAddress != null and pictureAddress != ''">
                and picture_address = #{pictureAddress}
            </if>
            <if test="picture_1 != null and picture_1 != ''">
                and picture_1 = #{picture_1}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pictureId" useGeneratedKeys="true">
        insert into wph.wph_shopingpicture(picture_address, picture_1)
        values (#{pictureAddress}, #{picture_1})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wph.wph_shopingpicture
        <set>
            <if test="pictureAddress != null and pictureAddress != ''">
                picture_address = #{pictureAddress},
            </if>
            <if test="picture_1 != null and picture_1 != ''">
                picture_1 = #{picture_1},
            </if>
        </set>
        where picture_id = #{pictureId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wph.wph_shopingpicture where picture_id = #{pictureId}
    </delete>

</mapper>