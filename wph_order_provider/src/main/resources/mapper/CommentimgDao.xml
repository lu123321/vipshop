<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.wph_order_provider.dao.CommentimgDao">

    <resultMap type="com.example.wph_order_provider.entity.Commentimg" id="CommentimgMap">
        <result property="imgid" column="imgid" jdbcType="INTEGER"/>
        <result property="commentid" column="commentid" jdbcType="INTEGER"/>
        <result property="img1" column="img1" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CommentimgMap">
        select
          imgid, commentid, img1
        from myone.commentimg
        where commentid = #{commentid}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="imgid" useGeneratedKeys="true">
        insert into myone.commentimg(commentid, img1)
        values (#{commentid}, #{img1})
    </insert>


</mapper>